<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/appBg">

    <TextView
        android:padding="10dp"
        android:id="@+id/open_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:id="@+id/open_others"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ironbear775.com.musicplayer.Util.SquareImageView
        android:id="@+id/open_image"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <SeekBar
        android:padding="10dp"
        android:id="@+id/open_seekbar"
        android:progressTint="@color/material_gray"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:padding="10dp"
        android:id="@+id/open_control"
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/footplay"/>
</LinearLayout>