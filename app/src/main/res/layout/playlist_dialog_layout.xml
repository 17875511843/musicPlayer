<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="500dp">
    <RelativeLayout
        android:id="@+id/dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_round_bg">
        <TextView
            android:id="@+id/dialog_text"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="30sp"
            android:textColor="@color/listView_bg_color"
            android:gravity="center_vertical"
            android:text="@string/add_to_playlist"
            android:background="@color/material_gray"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/dialog_create_playlist"
        android:layout_below="@+id/dialog"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?android:attr/selectableItemBackground">
        <ImageView
            android:id="@+id/dialog_create_cancel"
            android:layout_alignParentStart="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/cancel_black"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/dialog_create_input"
            android:layout_toEndOf="@+id/dialog_create_cancel"
            android:layout_toStartOf="@+id/dialog_create_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:background="@null"
            android:hint="@string/input_name"
            android:textCursorDrawable="@null"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/dialog_create_submit"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/done"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/dialog_create_icon"
            android:layout_alignParentStart="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/add_black"/>
        <TextView
            android:id="@+id/dialog_create_text"
            android:layout_toEndOf="@+id/dialog_create_icon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:text="@string/create_new_playlist"/>

    </RelativeLayout>
    <ListView
        android:id="@+id/dialog_listView"
        android:layout_below="@+id/dialog_create_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</RelativeLayout>