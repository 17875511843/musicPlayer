<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_bg">
    <RelativeLayout
        android:id="@+id/picker"
        android:layout_width="270dp"
        android:layout_height="wrap_content">
        <ironbear775.com.musicplayer.Util.TimePickerView
            android:id="@+id/minute_pv"
            android:layout_width="80dp"
            android:layout_height="160dp" />

        <TextView
            android:id="@+id/minute_tv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/minute_pv"
            android:text="@string/minute"
            android:textColor="@color/material_gray_dark"
            android:textSize="26sp"
            android:textStyle="bold" />

        <ironbear775.com.musicplayer.Util.TimePickerView
            android:id="@+id/second_pv"
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:layout_toEndOf="@id/minute_tv" />

        <TextView
            android:id="@+id/second_tv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/second_pv"
            android:text="@string/second"
            android:layout_marginEnd="10dp"
            android:textColor="@color/material_gray_dark"
            android:textSize="26sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:paddingTop="10dp"
        android:layout_below="@+id/picker"
        android:orientation="horizontal"
        android:layout_width="260dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sleep_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/sleepCancel"
            android:layout_centerInParent="true"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:gravity="center_vertical"
            android:textStyle="bold" />
        <Button
            android:id="@+id/sleepCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/sleepStart"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/sleep_timer_cancel"/>
        <Button
            android:id="@+id/sleepStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/sleep_timer_start"/>
    </RelativeLayout>

</RelativeLayout>