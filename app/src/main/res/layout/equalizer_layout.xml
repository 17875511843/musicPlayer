<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/equalizer_switch"
                android:id="@+id/equalizer_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/material_gray"
                app:popupTheme="@style/Theme.AppCompat.Light"/>

            <Switch
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/equalizer_switch"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_above="@+id/reset_equalizer"
        android:layout_below="@+id/appbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_alignParentTop="true"
                android:id="@+id/max1"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ironbear775.com.musicplayer.Util.VerticalSeekBar
                android:layout_above="@+id/min1"
                android:layout_below="@+id/max1"
                android:id="@+id/equalizer1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="50"
                android:progressBackgroundTint="@color/material_gray"
                android:progressTint="@color/material_gray"
                android:thumbOffset="0dp"
                android:thumbTint="@color/material_gray_dark"
                />
            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/min1"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_alignParentTop="true"
                android:id="@+id/max2"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ironbear775.com.musicplayer.Util.VerticalSeekBar
                android:id="@+id/equalizer2"
                android:layout_below="@+id/max2"
                android:layout_above="@+id/min2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="50"
                android:progressBackgroundTint="@color/material_gray"
                android:progressTint="@color/material_gray"
                android:thumbOffset="0dp"
                android:thumbTint="@color/material_gray_dark"
                />
            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/min2"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/max3"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ironbear775.com.musicplayer.Util.VerticalSeekBar
                android:id="@+id/equalizer3"
                android:layout_below="@+id/max3"
                android:layout_above="@+id/min3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="50"
                android:progressBackgroundTint="@color/material_gray"
                android:progressTint="@color/material_gray"
                android:thumbOffset="0dp"
                android:thumbTint="@color/material_gray_dark"
                />
            <TextView
                android:id="@+id/min3"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout4"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/max4"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ironbear775.com.musicplayer.Util.VerticalSeekBar
                android:id="@+id/equalizer4"
                android:layout_below="@+id/max4"
                android:layout_above="@+id/min4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="50"
                android:progressBackgroundTint="@color/material_gray"
                android:progressTint="@color/material_gray"
                android:thumbOffset="0dp"
                android:thumbTint="@color/material_gray_dark"
                />
            <TextView
                android:id="@+id/min4"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout5"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/max5"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ironbear775.com.musicplayer.Util.VerticalSeekBar
                android:id="@+id/equalizer5"
                android:layout_below="@+id/max5"
                android:layout_above="@+id/min5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="50"
                android:progressBackgroundTint="@color/material_gray"
                android:progressTint="@color/material_gray"
                android:thumbOffset="0dp"
                android:thumbTint="@color/material_gray_dark"
                />
            <TextView
                android:id="@+id/min5"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout6"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/max6"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ironbear775.com.musicplayer.Util.VerticalSeekBar
                android:id="@+id/equalizer6"
                android:layout_below="@+id/max6"
                android:layout_above="@+id/min6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="50"
                android:progressBackgroundTint="@color/material_gray"
                android:progressTint="@color/material_gray"
                android:thumbOffset="0dp"
                android:thumbTint="@color/material_gray_dark"
                />
            <TextView
                android:id="@+id/min6"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:layout_marginBottom="10dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:id="@+id/reset_equalizer"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:text="@string/reset"/>
</RelativeLayout>